#make resampling high quality
defaults.pcm.rate_converter "samplerate_best"


#make EQ the default pcm
#udev script will switch this between
#hdaeq
#sbeq

pcm.!default {
  type plug;
  slave.pcm sbequal;
}




##########
#Controls

ctl.equal {
 type equal;
}

